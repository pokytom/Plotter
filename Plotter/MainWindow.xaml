<Window x:Class="Plotter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:Plotter"
        WindowState="Maximized" 
        WindowStyle="SingleBorderWindow" 
        Title="Geometry Plotter" Height="400" Width="600"
        Background="#13141a">
    
    
    <Window.Resources>
        <local:HeightToWidthConverter x:Key="HeightToWidthConverter" Spacing="20"/>
    </Window.Resources>

    <Grid>
        <StackPanel 
            Orientation="Vertical" 
            Margin="10"
            >
            <TextBlock 
                Foreground="DarkGray" 
                Text="Width:"
                />
            <TextBox 
                Foreground="DarkGray"
                     Background="#222329" 
                     Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" 
                     Width="100"
                     />
            
            <TextBlock 
                Text="Height:"
                Foreground="DarkGray"
                />
            <TextBox Foreground="DarkGray"
                     Background="#222329" 
                     Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" 
                     Width="100"/>
            
            <Button 
                Foreground="DarkGray"
                Background="#222329" 
                Content="Update Plot" 
                Command="{Binding UpdateCommand}" 
                Width="100" 
                Margin="5"
                />

            <!-- Buttons for choosing shape -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Foreground="DarkGray" 
                        Background="#222329" 
                        Content="Square" 
                        Command="{Binding DrawSquareCommand}" 
                        Width="100" 
                        Margin="5"
                        />
                <Button Foreground="DarkGray"
                        Background="#222329" 
                        Content="U-shape" 
                        Command="{Binding DrawUShapeCommand}" 
                        Width="100" 
                        Margin="5"/>
            </StackPanel>

            <!-- Plot view with dynamic width based on height and spacing -->
            <oxy:PlotView 
                
                Foreground="DarkGray"
                Model="{Binding Model}" 
                          Background="#222329"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Height="800" Width="800"
                          Margin="20"/>
            
        </StackPanel>
    </Grid>
</Window>